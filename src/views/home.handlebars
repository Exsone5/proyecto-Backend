<h2>üìã Lista de Productos</h2>

{{#if hasProducts}}
    <div class="products-grid">
        {{#each products}}
            <div class="product-card">
                <h3>{{this.title}}</h3>
                <p class="product-code">C√≥digo: {{this.code}}</p>
                <p>{{this.description}}</p>
                <p class="product-price">${{this.price}}</p>
                <p>
                    <span class="product-stock {{#if (eq this.stock 0)}}out{{else}}{{#if (lt this.stock 5)}}low{{/if}}{{/if}}">
                        Stock: {{this.stock}} unidades
                    </span>
                </p>
                <span class="product-category">{{this.category}}</span>
                {{#if this.status}}
                    <p style="color: #28a745; margin-top: 10px;">‚úÖ Disponible</p>
                {{else}}
                    <p style="color: #dc3545; margin-top: 10px;">‚ùå No disponible</p>
                {{/if}}
            </div>
        {{/each}}
    </div>
{{else}}
    <div class="empty-state">
        <h2>üì≠ No hay productos</h2>
        <p>A√∫n no se han agregado productos al cat√°logo.</p>
        <p style="margin-top: 20px;">
            <a href="/realtimeproducts" style="color: #667eea; text-decoration: none; font-weight: bold;">
                Ir a la vista en tiempo real para agregar productos ‚Üí
            </a>
        </p>
    </div>
{{/if}}

